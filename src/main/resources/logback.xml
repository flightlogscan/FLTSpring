<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Development Profile -->
    <springProfile name="dev">
        <property name="LOG_PATH" value="./logs"/>
    </springProfile>

    <!-- Production Profile -->
    <springProfile name="prod">
        <property name="LOG_PATH" value="/var/log/FLTSpring"/>
    </springProfile>

    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%X{requestId}] - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/application-%d{MM-dd-yyyy}-%i.log</fileNamePattern>
            <!-- Logs are auto-deleted after 7 days via maxHistory.
                 Note: Cleanup only occurs on rollover (size or time-based).
                 For safety, a daily cron job is recommended to delete old logs:
                 0 0 * * * find /var/log/FLTSpring -name "*.log" -mtime +7 -delete -->
            <maxFileSize>10MB</maxFileSize>
            <!-- TODO: do we want this to be 30 (max for GDPR)? -->
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%X{requestId}] - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.giffing.bucket4j" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="Console" />
        <appender-ref ref="RollingFile" />
    </root>
</configuration>